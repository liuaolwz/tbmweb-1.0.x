<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
	   xmlns:cache="http://www.springframework.org/schema/cache"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:oxm="http://www.springframework.org/schema/oxm"
	   xmlns:p="http://www.springframework.org/schema/p" xmlns:util="http://www.springframework.org/schema/util"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <context:property-placeholder location="classpath:./script/redis.properties" ignore-unresolvable="true"/>

    <bean id="jedisPoolConfig0" class="redis.clients.jedis.JedisPoolConfig">
        <property name="maxTotal" value="${master.redis.pool.maxActive}" />
		<property name="maxIdle" value="${master.redis.pool.maxIdle}" />
        <property name="maxWaitMillis" value="${master.redis.pool.maxWaitMillis}"
		<property name="timeBetweenEvictionRunsMillis" value="${master.redis.pool.timeBetweenEvictionRunsMillis}" />
		<property name="testOnBorrow" value="${master.redis.pool.testOnBorrow}" />
	</bean>

	<bean id="jedisConnectionFactory0"
		  class="com.tumbleweed.platform.trunk.data.core.redis.JedisConnectionFactory">
		<property name="hostName" value="${master.redis.ip}" />
		<property name="port" value="${master.redis.port}" />
		<property name="password" value="${master.redis.password}" />
		<property name="dbIndex" value="1" />
		<property name="poolConfig" ref="jedisPoolConfig0" />
	</bean>
	<bean id="redisTemplate0" class="org.springframework.data.redis.core.RedisTemplate">
        <property name="connectionFactory" ref="jedisConnectionFactory0" />
    </bean>

	<bean id="jedisPoolConfig1" class="redis.clients.jedis.JedisPoolConfig">
        <property name="maxTotal" value="${slave.redis.pool.maxActive}" />
		<property name="maxIdle" value="${slave.redis.pool.maxIdle}" />
        <property name="maxWaitMillis" value="${slave.redis.pool.maxWaitMillis}"
		 <property name="timeBetweenEvictionRunsMillis" value="${slave.redis.pool.timeBetweenEvictionRunsMillis}" />
		<property name="testOnBorrow" value="${slave.redis.pool.testOnBorrow}" />
	</bean>

	<bean id="jedisConnectionFactory1"
		  class="com.tumbleweed.platform.trunk.data.core.redis.JedisConnectionFactory">
		<property name="hostName" value="${slave.redis.ip}" />
		<property name="port" value="${slave.redis.port}" />
		<property name="password" value="${slave.redis.password}" />
		<property name="dbIndex" value="1" />
		<property name="poolConfig" ref="jedisPoolConfig1" />
	</bean>
    <bean id="redisTemplate1" class="org.springframework.data.redis.core.RedisTemplate">
        <property name="connectionFactory" ref="jedisConnectionFactory1" />
    </bean>

	<bean id="dynamicRedisSelector"
		  class="com.tumbleweed.platform.trunk.data.core.redis.DynamicRedisSelector">
		<property name="redisTemplate0" ref="redisTemplate0" />
		<property name="redisTemplate1" ref="redisTemplate1" />
	</bean>
</beans>
