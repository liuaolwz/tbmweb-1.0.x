<?xml  version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">


    <bean id="dataSource"
          class="org.springframework.jdbc.datasource.TransactionAwareDataSourceProxy">
        <constructor-arg ref="lazyDataSource"/>
    </bean>
    <bean id="lazyDataSource" class="org.springframework.jdbc.datasource.LazyConnectionDataSourceProxy">
        <property name="targetDataSource">
            <ref local="originDataSource"/>
        </property>
    </bean>
    <bean id="originDataSource" class="org.apache.tomcat.jdbc.pool.DataSource">
        <property name="driverClassName" value="${trunk.persistence.driver}"/>
        <property name="url" value="${trunk.persistence.url}"/>
        <property name="username" value="${trunk.persistence.username}"/>
        <property name="password" value="${trunk.persistence.password}"/>
        <property name="defaultAutoCommit" value="false"/>
        <property name="initialSize" value="${trunk.persistence.pool.minSize}"/>
        <property name="minIdle" value="${trunk.persistence.pool.minSize}"/>
        <property name="maxActive" value="${trunk.persistence.pool.maxSize}"/>
        <property name="maxIdle" value="${trunk.persistence.pool.maxSize}"/>
        <property name="maxWait" value="${trunk.persistence.pool.blockingTimeout}"/>
        <property name="jdbcInterceptors" value="ConnectionState;StatementFinalizer"/>
        <property name="validationQuery" value="${trunk.persistence.pool.validationQuery}"/>
        <property name="validationInterval" value="30000"/>
        <property name="logAbandoned" value="true"/>
        <property name="testOnBorrow" value="true"/>
    </bean>

