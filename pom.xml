        <snapshotRepository>
            <id>tumbleweed-snapshots</id>
            <name>Trunk Snapshots Repository</name>
            <url>http://123.56.228.198:9903/nexus/content/repositories/tumbleweed-snapshots</url>
        </snapshotRepository>
